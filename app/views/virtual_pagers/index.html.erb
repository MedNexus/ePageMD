<h1>Manage Virtual Pagers</h1>

<table border=0 cellspacing=0 cellpadding=10 style="border: 1px solid black">
  <tr style="text-align: left; background-color: #000; color: white">
    <th>Name</th>
    <th>Min</th>
    <th>Max</th>
    <th>Log</th>
    <th colspan=3></th>
  </tr>

<% @virtual_pagers.each do |virtual_pager| %>
  <tr style="text-align: center; background-color: <%= cycle('#ddd','#fff')%>">
    <td style="padding-right: 15px"><%= virtual_pager.name %></td>
    <td><%= virtual_pager.min_active %></td>
    <td><%= virtual_pager.max_active %></td>
    <td><%= virtual_pager.log_messages %></td>
    <td colspan=3><%= link_to 'View', virtual_pager %> | 
	<%= link_to 'Edit', edit_virtual_pager_path(virtual_pager) %> | 
    <%= link_to 'Delete', virtual_pager, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Create Virtual pager', new_virtual_pager_path %>
