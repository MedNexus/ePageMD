<%= form_for(@virtual_pager) do |f| %>
  <% if @virtual_pager.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@virtual_pager.errors.count, "error") %> prohibited this virtual_pager from being saved:</h2>

      <ul>
      <% @virtual_pager.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table cellpadding=0 cellspacing=0 style="border: 1px solid black; padding: 8px">
	<tr>
		<td colspan=2>Required fields</td>
	</tr>
	<tr>
		<td style="padding-left: 20px;">Virtual Pager Name</td>
		<td style="padding-left: 10px;"><%= f.text_field :name %></td>
	</tr>
	<tr>
		<td style="padding-left: 20px">Log Messages</td>
		<td style="padding-left: 10px;"><%= f.check_box :log_messages %></td>
	</tr>
	<tr><td colspan=2>&nbsp;</td></tr>
	<tr>
		<td colspan=2>Optional Settings</td>
	</tr>
	
	<tr>
		<td style="padding-left: 20px">Min Required Pagers</td>
		<td style="padding-left: 10px;"><%= f.number_field :min_active, :size => 3 %></td>
	</tr>
	<tr>
		<td style="padding-left: 20px">Max Allowed Pagers</td>
		<td style="padding-left: 10px;"><%= f.number_field :max_active, :size => 3 %></td>
	</tr>
	<tr><td colspan=2>&nbsp;</td></tr>
	<tr>
		<td>&nbsp;</td>
		<td style="padding-left: 10px;"> <%= f.submit %></td>
	</tr>
</table>
<% end %>
