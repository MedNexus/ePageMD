<% if flash[:notice] or flash[:error ] %>
	<div class="notice"><%= flash[:notice ]%></div>
	<div class="error"><%= flash[:error ]%></div>
<% end %>

<%= form_tag :action => 'send_page' do -%>

<table style="line-height: 25px">
	<tr valign="top">
		<td style='font-size: 50px'>
			1.
		</td>
		<td width="10">&nbsp;</td>
		<td style='font-size: 20px'>
			Select a Pager:<br/>
			<%-
				style = "font-size: 20px; width: 300px;"
				style += "border: 2px solid red;" if @error[:pager]
			%>
			<%= select_tag "virtual_pager_id", options_from_collection_for_select(@virtual_pagers, "id", "name"), :style => style, :include_blank => true %>
			<br/>
			<br/>
		</td>
		<td>
			&nbsp;
		</td>
	</tr>
	<tr valign="top">
		<td style='font-size: 50px'>
			2.
		</td>
		<td width="10">&nbsp;</td>
		<td style='font-size: 20px'>
			Enter Patient ID:<br/>
			<%= text_field_tag 'patient_id', params[:patient_id], :style => 'font-size: 20px; width: 300px;' %>
			<br/><br/>
		</td>
		<td>
			<div id="grayText">Patient Initials followed by last four digits of MRN. eg: SD#1029</div>
		</td>
	</tr>
	<tr valign="top">
		<td style='font-size: 50px'>
			3.
		</td>
		<td width="10">&nbsp;</td>
		<td style='font-size: 20px'>
			Enter your Your Message:<br/>
			<%-
				style = ""
				style += "border: 2px solid red;" if @error[:pager]
			%>
			<%= text_area_tag :message, params[:message], :cols => 41, :rows => 5, :style => style %>
			<br/><br/>
		</td>
		<td>
			<div id="grayText">Include your name, call back number, and brief message. Limited to 200 characters.</div>
		</td>
	</tr>
	<tr valign="top">
		<td style='font-size: 50px'>
			4.
		</td>
		<td width="10">&nbsp;</td>
		<td style='font-size: 20px'>
			How Urgent is this Message?:<br/>
			<span style='font-size: 15px'>
			<%= radio_button_tag(:urgency, "1") %> Emergent <span id="grayText">(call back immediately)</span><br/>
			<%= radio_button_tag(:urgency, "2") %> Urgent <span id="grayText">(call back in 5 minutes)</span><br/>
			<%= radio_button_tag(:urgency, "3", true) %> Routine <span id="grayText">(call back within 30 minutes)</span><br/>
			<%= radio_button_tag(:urgency, "4") %> FYI <span id="grayText">(No call back necessary)</span><br/>
			</span>
		</td>
		<td>
			<div id="grayText">Specifying an urgency will allow physicians to better triage pages. 
				Please use FYI pages for med refills, non-critical lab results, etc.</div>
		</td>
	</tr>
	<tr valign="middle">
		<td style='font-size: 50px'>
			&nbsp;
		</td>
		<td width="10">&nbsp;</td>
		<td>
				<br/>
				<%= submit_tag 'Send Page', :style => "font-size: 20px" %>
		</td>
	</tr>
</table>
<br/><br/>

<% end %>
