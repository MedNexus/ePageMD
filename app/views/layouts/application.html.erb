<!DOCTYPE html>
<html>
<head>
  <title>ePageMD</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="headerDiv">
	<div style="text-align: right; margin-right: 20px; margin-top: 20px;"><% if user_signed_in? %>
		<%= link_to 'Home', '/' %> | <%= link_to 'Admin', '/virtual_pagers'%> | <%= link_to('Profile', edit_user_registration_path) %> | <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>

	<% else %>
	 			<%= link_to 'Home', '/' %> | <%= link_to('Login', new_user_session_path)%>
	<% end %></div>
</div>
<div id="mainContentDiv">
<center>
	<%= yield %>
</center>
</div>
<div id="footerDiv">&copy; <%= Time.now.year %> - <i>e</i>PageMD


</div>

</body>
</html>
