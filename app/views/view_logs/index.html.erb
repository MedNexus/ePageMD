<table border=0 cellpadding=3 cellspacing=0 style="line-height: 10px">
<% @logs.each do |log| %>
	<tr style="background-color: <%= cycle("#fff", "#ccc")%>">
		<td style="font-size: 10px; color:gray; width: 130px">
			<%= log.created_at.strftime('%m/%d/%Y<br/>%l:%M:%S %P').html_safe %>
		</td>
		<td style="width: 200px">
			<%= number_to_phone(log.pager_number, :area_code => true)%>
		</td>
		<td style="width: 400px">
			<%= log.message%>
		</td>
		<td style="width: 100px">
			<%= log.status%>
		</td>
		<td style="width: 190px; font-size: 9px">
			<%= log.status_message%>
		</td>
	</tr>
<% end %>
</table>