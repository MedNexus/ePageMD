<table border=0 cellpadding=3 cellspacing=0 style="line-height: 10px">
<% @logs.each do |log| %>
	<tr style="background-color: <%= cycle("#fff", "#ccc")%>">
		<td style="font-size: 10px; color:gray; width: 140px">
			<%= log.created_at %>
		</td>
		<td style="width: 200px">
			<%= number_to_phone(log.pager_number, :area_code => true)%>
		</td>
		<td style="width: 400px">
			<%= log.message%>
		</td>
		<td style="width: 100px">
			<%= log.status%>
		</td>
		<td style="width: 200px">
			<%= log.status_message%>
		</td>
	</tr>
<% end %>
</table>